#!/bin/sh 

amixer -c 1 sset Master,0 toggle  > /dev/null
amixer -c 0 sset Master,0 toggle > /dev/null

amixer -c 0 sget Master,0 | grep dB | head -n1 | cut -f 7 -d " " | sed -e's/\[//g' -e 's/\]//g' > /home/sagotsky/.volinfo

if [ $(amixer -c 0 sget Master,0 | grep off | wc -c) -gt 0 ] ; then
    echo "--%" > /home/sagotsky/.volinfo
fi
